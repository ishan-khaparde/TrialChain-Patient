<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
  >

    <TextView
        android:text="Enter Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/registerNameField"
        android:layout_alignStart="@+id/registerNameField"
        android:layout_marginTop="26dp"
        android:id="@+id/textView4"
        android:textColor="?attr/colorPrimary" />

    <TextView
        android:text="Choose a 4 digit PIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerNameField"
        android:layout_alignLeft="@+id/registerNameField"
        android:layout_alignStart="@+id/registerNameField"
        android:layout_marginTop="31dp"
        android:id="@+id/textView5"
        android:textColor="?attr/colorPrimary" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:layout_marginTop="42dp"
        android:id="@+id/registerConfirmPINField"
        android:hint="Re-enter PIN"
        android:layout_below="@+id/registerPINField"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="Confirm your PIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerPINField"
        android:layout_alignLeft="@+id/registerConfirmPINField"
        android:layout_alignStart="@+id/registerConfirmPINField"
        android:layout_marginTop="19dp"
        android:id="@+id/textView6"
        android:textColor="?attr/colorPrimary" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="22dp"
        android:id="@+id/registerNameField"
        android:hint="Enter Name Here."
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/register"
        android:layout_below="@+id/registerConfirmPINField"
        android:layout_alignLeft="@+id/registerConfirmPINField"
        android:layout_alignStart="@+id/registerConfirmPINField" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/registerPINField"
        android:hint="Set a PIN"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />
</RelativeLayout>
